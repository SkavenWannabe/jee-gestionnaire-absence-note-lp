<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- -->
    <context-param>
        <param-name>title</param-name>
        <param-value>Gestionnaire absences et notes Ã©tudiants</param-value>
    </context-param>
    <!-- URL -->
    <context-param>
        <param-name>urlAccueil</param-name>
        <param-value>/index.jsp</param-value>
    </context-param>
    <context-param>
        <param-name>urlListeEtudiants</param-name>
        <param-value>/listeEtudiants.jsp</param-value>
    </context-param>
    <context-param>
        <param-name>groupes</param-name>
        <param-value>TODO</param-value>
    </context-param>

    <!-- param servlet -->
    <context-param>
        <param-name>servletListeEtudiant</param-name>
        <param-value>/listeEtudiant</param-value>
    </context-param>
    <!-- Servlet controleur -->
    <servlet>
        <servlet-name>controleur</servlet-name>
        <servlet-class>uga.carminav.carminavgestionnaireabsencenote.controleur.Controleur</servlet-class>
        <init-param>
            <param-name>urlAccueil</param-name>
            <param-value>/index.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>urlListeEtudiants</param-name>
            <param-value>/listeEtudiants.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>servletListeEtudiant</param-name>
            <param-value>/listeEtudiant</param-value>
        </init-param>
    </servlet>

    <!-- Mapping URL/Servlet -->
    <servlet-mapping>
        <servlet-name>controleur</servlet-name>
        <url-pattern>/do/*</url-pattern>
    </servlet-mapping>

    <!--  fichiers d'accueil -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>